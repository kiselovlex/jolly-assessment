    "item": [
        {
            "name": "Create Rule",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"ruleId\", jsonData.id);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Clock In Rule\",\n    \"eventType\": \"clock_in\",\n    \"condition\": {\n        \"type\": \"eq\",\n        \"field\": \"correctClockInMethod\",\n        \"value\": true\n    },\n    \"points\": 10\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{baseUrl}}/rules",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "rules"
